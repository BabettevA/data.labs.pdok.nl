prefix brt: <http://brt.basisregistraties.overheid.nl/def/top10nl#>
prefix dbo: <http://dbpedia.org/ontology/>
prefix foaf: <http://xmlns.com/foaf/0.1/>
prefix geo: <http://www.opengis.net/ont/geosparql#>
prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
prefix xsd: <http://www.w3.org/2001/XMLSchema#>
select ?woonplaatsWkt ?woonplaatsWktLabel {
  ?woonplaats1 brt:isBAGwoonplaats true ;
               geo:hasGeometry/geo:asWKT ?woonplaatsWoonplaatsWkt ;
               rdfs:label ?woonplaatsNaam .
  service <https://dbpedia.org/sparql> {
    ?woonplaats2 foaf:depiction ?woonplaatsVlag ;
                 rdfs:label ?woonplaatsNaam .
  }
  bind (concat(
    '<h2>',str(?woonplaatsNaam),'</h2>',
    if(bound(?woonplaatsVlag),concat('<img src="',str(?woonplaatsVlag),'" style="max-width: 150px;">'),''),
    '<p>Link naar DBpedia: <a href="',str(?woonplaats2),'">link</a></p>') as ?woonplaatsWktLabel)
}
limit 25
